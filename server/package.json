{
  "name": "eshopy",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "start:dev": "nodemon src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node build/index.js",
    "migration:dev": "cross-env NODE_ENV=development ts-node run-migrations.ts",
    "migration:prod": "cross-env NODE_ENV=production ts-node run-migrations.ts",
    "migration:test": "cross-env NODE_ENV=test ts-node run-migrations.ts",
    "build": "tsc -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:ci": "cross-env NODE_ENV=test jest --ci --detectOpenHandles",
    "docs": "apidoc -i src -o docs",
    "lint": "tslint -c tslint.json src/**/*.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.11",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.12.0",
    "@types/supertest": "^2.0.7",
    "apidoc": "^0.17.7",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.4000"
  },
  "config": {
    "commitizen": {
      "path": "./server/node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@sentry/node": "^5.0.7",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "morgan": "^1.9.1",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint"
    ]
  }
}
